<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authFragment">

    <fragment
        android:id="@+id/authFragment"
        android:name="com.example.ellcom.ui.AuthFragment"
        tools:layout="@layout/fragment_auth">
        <action
            android:id="@+id/action_authFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
        <action
            android:id="@+id/action_authFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment" />
        <action
            android:id="@+id/action_authFragment_to_navigationToMainContent"
            app:destination="@id/navigationToMainContent"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.ellcom.ui.RegistrationFragment"
        tools:layout="@layout/fragment_registration" >
        <action
            android:id="@+id/action_registrationFragment_to_readerPDFFragment"
            app:destination="@id/readerPDFFragment" />
    </fragment>
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.example.ellcom.ui.ForgotPasswordFragment"
        tools:layout="@layout/fragment_forgot_password" />
    <fragment
        android:id="@+id/readerPDFFragment"
        android:name="com.example.ellcom.ui.ReaderPDFFragment"
        tools:layout="@layout/fragment_reader_p_d_f" />
    <navigation android:id="@+id/navigationToMainContent"
        app:startDestination="@id/mainScreenFragment">
        <fragment
            android:id="@+id/mainScreenFragment"
            android:name="com.example.ellcom.ui.MainScreenFragment"
            tools:layout="@layout/fragment_main_screen" >
            <action
                android:id="@+id/action_mainScreenFragment_to_subContractListFragment"
                app:destination="@id/subContractListFragment" />
        </fragment>
        <fragment
            android:id="@+id/balanceFragment"
            android:name="com.example.ellcom.ui.BalanceFragment"
            tools:layout="@layout/fragment_balance" />
        <fragment
            android:id="@+id/profileFragment"
            android:name="com.example.ellcom.ui.ProfileFragment"
            tools:layout="@layout/fragment_profile" />
        <fragment
            android:id="@+id/contactFragment"
            android:name="com.example.ellcom.ui.ContactFragment"
            tools:layout="@layout/fragment_contact" />
        <fragment
            android:id="@+id/subContractListFragment"
            android:name="com.example.ellcom.ui.SubContractListFragment"
            tools:layout="@layout/fragment_sub_contract_list" />
    </navigation>
    <action
        android:id="@+id/action_global_authFragment"
        app:destination="@id/authFragment"
        app:popUpTo="@id/nav_graph"
        app:popUpToInclusive="true" />
</navigation>