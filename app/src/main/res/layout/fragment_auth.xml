<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/authLayout"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".ui.AuthFragment">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="Вход в личный кабинет"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTextLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/border_radius"
        android:backgroundTint="@color/edit_text_neutral"
        android:ems="10"
        android:hint="Введите логин или номер договора"
        android:inputType="text"
        android:padding="6dp"
        android:textColorHint="@color/text_color" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/border_radius"
        android:backgroundTint="@color/edit_text_neutral"
        android:ems="10"
        android:hint="Введите пароль"
        android:inputType="textPassword"
        android:padding="6dp"
        android:textColorHint="@color/text_color" />

    <TextView
        android:id="@+id/textViewError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:background="@drawable/border_radius"
        android:backgroundTint="@color/pink"
        android:padding="5dp"
        android:text="Введен неверно логин или пароль"
        android:textColor="@color/rosy_brown"
        android:visibility="invisible" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonEnter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/dark_blue"
        android:text="Войти"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:cornerRadius="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonRegistration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/orange"
        android:text="Стать абонентом Ellcom"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:cornerRadius="8dp" />

    <TextView
        android:id="@+id/buttonForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="25dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="Забыли пароль?"
        android:textAllCaps="false"
        android:textColor="@color/dark_blue" />

</LinearLayout>